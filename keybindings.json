[
    {
        "key": "j j",
        "command": "editor.action.inlineSuggest.hide",
        "when": "inlineSuggestionVisible"
    },
    {
        "key": "escape",
        "command": "-editor.action.inlineSuggest.hide",
        "when": "inlineSuggestionVisible"
    },
    {
        // map cmd + k to up terminal
        "key": "cmd+k",
        "command": "workbench.action.terminal.resizePaneUp",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        // map cmd + j to down terminal
        "key": "cmd+j",
        "command": "workbench.action.terminal.resizePaneDown",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        // map shift + tab to move to previous editor
        "key": "shift+tab",
        "command": "workbench.action.previousEditor",
        "when": "inputFocus && vim.mode=='Normal'"
    },
    {
        // map ctrl + n to open/hide explorer
        "key": "ctrl+n",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "inputFocus && vim.mode=='Normal'"
    },
    {
        // map ctrl + n to hide explorer when focus is in sidebar
        "key": "ctrl+n",
        "command": "workbench.action.closeSidebar",
        "when": "!editorFocus && sideBarFocus "
    },
    {
        "key": "cmd+1",
        "command": "workbench.action.terminal.focusAtIndex1",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "cmd+3",
        "command": "workbench.action.terminal.focusAtIndex3",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "cmd+2",
        "command": "workbench.action.terminal.focusAtIndex2",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    }
]